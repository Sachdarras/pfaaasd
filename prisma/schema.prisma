datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Description {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  title   String
  subtitle String
  content String @db.LongText
  image   String @db.LongText
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  img         String
  description String  @db.LongText
  lien        String
  repo        String
  skills     Skill[]  @relation("ProjectSkill")
}

model Skill {
  id    Int    @id @default(autoincrement())
  name  String @unique
  image String
  order Int 
  projects Project[] @relation("ProjectSkill")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(USER) // Ajout du champ role avec une valeur par défaut

}

// Ajout de l'enum pour les rôles
enum Role {
  USER
  ADMIN
}